generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("SUPABASE_DATABASE_URL")
}

generator zod {
  provider                 = "zod-prisma-types"
  output                   = "../src/types/zod"
  createInputTypes         = false
  writeNullishInModelTypes = true
}

model User {
  id           String    @id @default(dbgenerated("auth.uid()")) @db.Uuid
  /// @zod.string.min(6).max(32)
  account_name String    @db.VarChar(32)
  /// @zod.string.min(1).max(32)
  display_name String    @db.VarChar(32)
  biography    String?
  /// @zod.string.url()
  external_url String?   @db.VarChar
  /// @zod.string.url()
  icon_url     String?   @db.VarChar
  created_at   DateTime? @default(now())
  updated_at   DateTime? @default(now()) @updatedAt
  deleted_at   DateTime?

  posts Post[]
}

model Post {
  id         Int       @id @default(autoincrement())
  user_id    String    @default(dbgenerated("auth.uid()")) @db.Uuid
  /// @zod.string.url()
  image_url  String    @db.VarChar
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now()) @updatedAt
  deleted_at DateTime?

  User User @relation(fields: [user_id], references: [id])
}
